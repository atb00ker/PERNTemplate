{
  "name": "PERN",
  "version": "0.1.0",
  "description": "PERN",
  "author": "Ajay Tripathi <ajay39in@gmail.com> (https://atb00ker.github.io)",
  "scripts": {
    "start": "npm run node-start & npm run react-start",
    "debug": "node --inspect -r ts-node/register src/server.ts",
    "node-start": "node-dev src/server.ts --notify=false",
    "node-build": "tsc -p .",
    "node-prod": "npm run migrate && node node_build/server.js",
    "react-start": "webpack serve --open --mode development",
    "react-build": "webpack --mode production",
    "build": "npm run react-build && npm run node-build",
    "migrate": "sequelize-cli db:migrate",
    "migrate:reset": "sequelize-cli db:migrate:undo:all && npm run migrate",
    "kill": "pkill -f node",
    "test": "jest --runInBand --detectOpenHandles",
    "test:watch": "jest --watch --runInBand --detectOpenHandles",
    "test:debug": "node --inspect node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "dotenv-webpack": "^7.0.3",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "ini": "^2.0.0",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "prop-types": "^15.7.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-error-boundary": "^3.0.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-use-websocket": "^2.7.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.6.5",
    "sequelize-cli": "^6.2.0",
    "sequelize-typescript": "^2.1.0",
    "ws": "^6.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.12",
    "@types/ini": "^1.3.30",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.6.1",
    "@types/react": "^17.0.13",
    "@types/react-dom": "^17.0.8",
    "@types/sequelize": "^4.28.10",
    "@types/supertest": "^2.0.11",
    "@types/typescript": "^2.0.0",
    "@types/validator": "^13.6.3",
    "@types/ws": "^7.4.7",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.6",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "jest": "^27.0.6",
    "node-dev": "^7.0.0",
    "node-ts": "^5.1.2",
    "react-test-renderer": "^16.14.0",
    "regenerator-runtime": "^0.13.7",
    "style-loader": "^3.0.0",
